@model eGift.Admin.MVC.Models.ViewModels.EmployeeViewModel
@using eGift.Admin.MVC.Helpers

@{
    ViewData["Title"] = "Employee";
    ViewData["SubTitle"] = "Delete";
    var defaultImageUrl = Url.Content("~/images/default/user_default_image.png");
}

<h1>@ViewData["Title"]</h1>
<h4>@ViewData["SubTitle"]</h4>
<hr />

@* <h3>Are you sure you want to delete this?</h3> *@
<div class="row">
    <div class="col-sm-4">
        <div>
            <dl class="col-sm-12">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.FirstName)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.FirstName)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.LastName)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.LastName)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.DateOfBirth)
                </dt>
                <dd class="col-sm-8">
                    @Model.DateOfBirth.ToDateString()
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Age)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Age)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Mobile)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Mobile)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Email)
                </dd>

                @* <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AddressName)
                </dt>
                <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AddressName)
                </dd> *@

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.GenderName)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.GenderName)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.RoleName)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.RoleName)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.IsActive)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.IsActive)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.IsDefault)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.IsDefault)
                </dd>

            </dl>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="mb-2 align-text-center">
            @if (Model.ProfileImageData == null)
            {
                <img id="profile-image-preview" src="@defaultImageUrl" class="profile-image" />
            }
            else
            {
                <!--How to bind byte array in img tag-->
                <img id="profile-image-preview" src="data:image/*;base64,@Convert.ToBase64String(Model.ProfileImageData)" class="profile-image" />
            }
        </div>
    </div>

    @* <form asp-action="Delete" method="post"> *@
    <div class="col-md-6">
        <input id="employee-delete" type="button" value="Delete" data-id="@Model.ID" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </div>
    @* </form> *@
</div>


<script src="~/js/pages/employee.js"></script>