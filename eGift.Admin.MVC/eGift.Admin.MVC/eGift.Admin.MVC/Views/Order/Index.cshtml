@using eGift.Admin.MVC.Common
@using eGift.Admin.MVC.Helpers
@model eGift.Admin.MVC.Models.ListViewModels.OrderListViewModel

@{
    ViewData["Title"] = "Order";
    ViewData["SubTitle"] = "List";
    int index = 0;
}

<h1>@ViewData["Title"]</h1>
<h4>@ViewData["SubTitle"]</h4>
<hr />

<table id="order-table" class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th class="align-text-center">
                @Html.DisplayNameFor(model => model.OrderModel.OrderNumber)
            </th>
            <th class="align-text-center">
                @Html.DisplayNameFor(model => model.OrderModel.TotalAmount)
            </th>
            <th class="align-text-center">
                @* @Html.DisplayNameFor(model => model.OrderModel.CreatedDate) *@
                Order Date
            </th>
            <th class="align-text-center">
                @Html.DisplayNameFor(model => model.OrderModel.StatusId)
            </th>
            <th class="align-text-center">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderList)
        {
            index++;
            <tr>
                <td class="align-text-center">
                    @index
                </td>
                <td class="align-text-center">
                    @item.OrderNumber
                </td>
                <td class="align-text-center">
                    @item.TotalAmount
                </td>
                <td class="align-text-center">
                    @item.CreatedDate.ToDateString()
                </td>
                <td class="align-text-center">
                    @(((Status)item.StatusId).ToString())
                </td>
                <td class="align-text-center">
                    <a asp-action="Details" asp-route-id="@item.ID" title="Details" class="text-decoration-none me-2">
                        <i class="fa-solid fa-info text-dark"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="~/js/pages/order.js"></script>