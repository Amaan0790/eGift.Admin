@model eGift.Admin.MVC.Models.ListViewModels.AddressListViewModel

@{
    ViewData["Title"] = "Address";
    ViewData["SubTitle"] = "List";
    int index = 0;
}

<h1>@ViewData["Title"]</h1>
<h4>@ViewData["SubTitle"]</h4>
<hr />

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table id="address-table" class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>
                @Html.DisplayNameFor(model => model.AddressModel.Street1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressModel.CityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressModel.StateName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressModel.CountryName)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AddressList)
        {
            index++;
            <tr>
                <td>
                    @index
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Street1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CityName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StateName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountryName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID" title="Edit" class="text-decoration-none me-2">
                        <i class="fa-solid fa-pen text-dark"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.ID" title="Details" class="text-decoration-none me-2">
                        <i class="fa-solid fa-eye text-dark"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.ID" title="Delete" class="text-decoration-none">
                        <i class="fa-solid fa-trash text-dark"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="~/js/pages/address.js"></script>