@model eGift.Admin.MVC.Models.ViewModels.AddressViewModel

@{
    ViewData["Title"] = "Address";
    ViewData["SubTitle"] = "Edit";
}

<h1>@ViewData["Title"]</h1>
<h4>@ViewData["SubTitle"]</h4>
<hr />

<form asp-action="Edit" method="post">
    <div class="row">
        <div class="col-md-4">
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="CreatedDate" />
            <input type="hidden" asp-for="CreatedBy" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CountryId" class="control-label required"></label>
                <select asp-for="CountryId" asp-items="Model.CountryList" class="form-control">
                    <option value="">Select</option>
                </select>
                <span asp-validation-for="CountryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StateId" class="control-label required"></label>
                <select asp-for="StateId" asp-items="Model.StateList" data-stateId="@Model.StateId" class="form-control">
                    <option value="">Select</option>
                </select>
                <span asp-validation-for="StateId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CityId" class="control-label required"></label>
                <select asp-for="CityId" asp-items="Model.CityList" data-cityId="@Model.CityId" class="form-control">
                    <option value="">Select</option>
                </select>
                <span asp-validation-for="CityId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Street1" class="control-label required"></label>
                <input asp-for="Street1" class="form-control" />
                <span asp-validation-for="Street1" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Street2" class="control-label"></label>
                <input asp-for="Street2" class="form-control" />
                <span asp-validation-for="Street2" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Pincode" class="control-label"></label>
                <input asp-for="Pincode" class="form-control" />
                <span asp-validation-for="Pincode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script src="~/js/pages/address.js"></script>